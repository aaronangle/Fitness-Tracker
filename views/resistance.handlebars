<div class="container-fluid wrapper">
    <br>
    <br>
    <br>
    <div class="row center">
        <div class="col-2"></div>
        <div class="col-1"></div>
        <div class="col-12 col-lg-6">

            <div class="card text-center">
                <div class="card-header">

                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-2"></div>
                        <div class="col-8">
                            <form>
                                <div class="form-group">
                                    <label for="workout">Workout</label>
                                    <input type="text" class="form-control" id="workout">
                                </div>
                                <div class="form-group">
                                    <label for="workoutName">Workout Name (ex. pushups, bench, squats)</label>
                                    <input type="text" class="form-control" id="workoutName">
                                </div>
                                <div class="form-group">
                                    <label for="weight">Weight (lbs.)</label>
                                    <input type="number" class="form-control" id="weight">
                                </div>
                                <div class="form-group">
                                    <label for="sets">Sets</label>
                                    <input type="number" class="form-control" id="sets">
                                </div>
                                <div class="form-group">
                                    <label for="reps">Reps</label>
                                    <input type="number" class="form-control" id="reps">
                                </div>
                                <button id="submit" class="btn btn-dark my-1">Submit & Return Home</button>
                                <button id="add" class="btn btn-dark">Add to Workout</button>
                            </form>
                            <h4 id="successAlert"></h4>
                        </div>
                        <div class="col-2"></div>
                    </div>


                </div>
                <div class="card-footer text-muted">

                </div>
            </div>
        </div>
    </div>
</div>